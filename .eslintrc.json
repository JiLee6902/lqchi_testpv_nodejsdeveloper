{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "allowJs": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types"],
      "types": ["node"]
    },
    "ts-node": {
      "esm": true
    },
    "include": [
      "src/**/*",
      "src/types/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
  }
  